{{- $backup_namespace := promptString "Backup namespace" -}}
{{- $restic_password := promptString "Restic password" -}}
{{- $b2_account_id := promptString "Backblaze B2 account ID" -}}
{{- $b2_account_key := promptString "Backblaze B2 account key" -}}

[data]
    backup_namespace = {{ $backup_namespace | quote }}

[data.env]
    restic_password = {{ $restic_password | quote }}
    b2_account_id = {{ $b2_account_id | quote }}
    b2_account_key = {{ $b2_account_key | quote }}
