#!/usr/bin/env bash

# Required parameters:
# @raycast.schemaVersion 1
# @raycast.title Check NextDNS Status
# @raycast.mode inline
# @raycast.refreshTime 5m

# Optional parameters:
# @raycast.icon ðŸ“¶

# Documentation:
# @raycast.description Check whether the NextDNS resolver is active on this machine
# @raycast.author Caleb Cox
# @raycast.authorURL https://github.com/canac

if curl -s https://$(openssl rand -hex 12)-{{ .nextdns_profile }}.test.nextdns.io/ | grep '"status": "ok"' > /dev/null; then
  echo "Enabled"
else
  echo "Disabled"
fi
